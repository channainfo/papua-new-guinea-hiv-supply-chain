<%= simple_form_for [:admin, @commodity_category ] , :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :com_type, collection: CommodityCategory::TYPES, include_blank: "Select Type", label: "Type"  %>
  <div class="form-actions"> 
    <%= link_button_cancel 'Cancel' , admin_commodity_categories_path(:type => params[:type]) %>
    <%= button_save ' Save' %>
  </div>
<% end %>
