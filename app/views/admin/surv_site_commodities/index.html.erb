<% content_for :breadcrumb do %>
  <%= breadcrumb [
    {"Surv Sites" => admin_import_surv_surv_sites_path(@surv_site.import_surv)},
    {"Surv Site Commodites" => false}
  ] 
  %>
<% end %>

<%= page_header "Surv Site for Site : " + @surv_site.site.name +  ", #{@surv_site.year}-#{@surv_site.month}" %>

<table class="table table-hover ">
  <thead>
    <tr>
      <th class='nth-table'> # </th>
      <th> Commodity </th>
      <th width='60'> Quantity </th>
    </tr>
  </thead>
  <tbody>
    <% @surv_site_commodities.each_with_index do |surv_site_commodity, index| %>
      <tr>
        <td><%=current_entries + index %></td>
        <td><%=surv_site_commodity.commodity.name%></td>
        <td><%=surv_site_commodity.quantity %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render_paginate_for @surv_site_commodities %>