<% url =  @regimen.new_record? ? admin_regimens_path : admin_regimen_path(@regimen) %>
<%= simple_form_for [:admin , @regimen], :url => url,:html => { :class => 'form-horizontal' } do |f| %>

  <%= f.error_notification %> 

  <%= f.input :name %>
  <%= f.input :strength_dosage %>

  <%= f.association :regimen_category, collection: RegimenCategory.all, :include_blank => 'Select Regimen Category' %>
  <%= f.association :unit, collection: Unit.all, :include_blank => 'Select Unit' %>

  <div class="form-actions">
    <%= button_save ' Save ' %>
    <%= link_button_cancel 'Cancel', admin_regimens_path() %>
  </div>
<% end %>
