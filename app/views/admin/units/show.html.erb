<%= content_for :breadcrumb do %>
  <%= breadcrumb [
      { 'Units' => admin_units_path    },
      { 'Detail : ' + @unit.name => nil }
    ] %>
<% end %>
<%= page_header "Unit Detail" %>

<dl class="dl-horizontal">
  <dt><strong><%= t("Login") %>:</strong></dt>
  <dd><%= @unit.name %></dd>


  <dt><strong><%= t("Created At") %>:</strong></dt>
  <dd><%= l @unit.created_at %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('Back'), admin_units_path, :class => 'btn'  %>
  
  <%= link_to t('Edit'), edit_admin_unit_path(@unit), :class => 'btn' %>
  
  <%= link_to t('Destroy'), admin_unit_path(@unit),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger' %>
</div>
