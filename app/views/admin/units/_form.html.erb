<%= simple_form_for [:admin, @unit], :html => { :class => "form-horizontal"} do |f| %>
	<%= f.error_notification %>
	<%= f.input "name" %>
	<div class="form-actions">
	    <%= f.button :submit, :class => 'btn-primary' %>
	    <%= link_to t('Cancel'),  admin_units_path, :class => 'btn' %>
  	</div>
<% end %>