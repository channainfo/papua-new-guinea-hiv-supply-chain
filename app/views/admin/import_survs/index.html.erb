<%= page_header("Import Survs form") do  %>
  <%= link_to 'New Import Form',  new_admin_import_surv_path(), :class => 'btn' %>
<% end %>

<% content_for :breadcrumb do %>
  <%= breadcrumb [{"Imports Survs Form" => nil}]  %>
<% end %>

<%= paginate_records @import_survs %>
<table class="table table-striped well no-border no-padding">
  <thead>
    <tr>
      <th><%= t 'File' %></th>
      <th><%= t 'User' %></th>
      <th><%= t 'Type' %></th>
      <th><%= t 'Uploaded At' %></th>
      <th class="action_col3" ><%= t 'Action' %></th>
    </tr>
  </thead>
  <tbody>
    <% @import_survs.each do |import_surv| %>
      <tr>
        <td>
          <%= link_to File.basename(import_surv.form.current_path) , download_admin_import_surv_path(import_surv) %>
        </td>
        <td><%=import_surv.surv_site.name %></td>
        <td><%=import_surv.user.display_name %></td>
        <td><%=import_surv.status %></td>
        <td><%=requisition_report.created_at %></td>
        <td class="last">
    <% 
       confirm_warning = 'The form has already been imported. Are you sure to reimport it ? [Warning] Re impport the form will automatically delete the previouse imported data '
       confirm_import  =  'Are you sure to import the form'
       msg = (requisition_report.status == RequisitionReport::IMPORT_STATUS_SUCCESS) ? confirm_warning  : confirm_import
     %>
    
          <%= link_to t('Import'), import_admin_requisition_report_path(requisition_report), 
                  :method => :post, :confirm => msg, :class => 'btn btn-mini' %>   
          <%= link_to t('Delete'), admin_requisition_report_path(requisition_report),
                      :method => :delete, :confirm  => 'Are you sure?' ,:class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>




