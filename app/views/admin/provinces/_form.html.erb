<%= simple_form_for [:admin, @province], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>
  <%= f.input :name %>
  <%= f.input :code %>
  <div class="form-actions">
    <%= button_save ' Save ' , 'btn-primary' %>
    <%= link_button_cancel ' Cancel ', admin_provinces_path %>
  </div>
<% end %>
