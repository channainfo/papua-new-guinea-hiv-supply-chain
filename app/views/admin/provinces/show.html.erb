<%= content_for :breadcrumb do %>
  <%= breadcrumb [
      { 'Provinces' => admin_provinces_path    },
      { 'Detail : ' + @province.full_description => nil }
    ] %>
<% end %>
<%= page_header "Province Detail" %>

<dl class="dl-horizontal">
  <dt><strong><%= t("Name") %>:</strong></dt>
  <dd><%= @province.name %></dd>
  <dt><strong><%= t("Code") %>:</strong></dt>
  <dd><%= @province.code %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_provinces_path, :class => 'btn'  %>
  
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_province_path(@province), :class => 'btn' %>
  
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_province_path(@province),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
