<%= content_for :breadcrumb do %>
  <%= breadcrumb [
      { 'Sites' => admin_sites_path    },
      { 'Detail : ' + @site.name => nil }
    ] %>
<% end %>

<dl class="dl-horizontal">
  <dt><strong><%= t('Name') %>:</strong></dt>
  <dd><%= @site.name %></dd>

  <dt><strong><%= t('Lat') %>:</strong></dt>
  <dd><%= @site.lat %></dd>

  <dt><strong><%= t('Lng') %>:</strong></dt>
  <dd><%= @site.lng %></dd>

  <dt><strong><%= t('Service Type') %>:</strong></dt>
  <dd><%= @site.service_type %></dd>

  <dt><strong><%= t(:suggestion_order) %>:</strong></dt>
  <dd><%= @site.suggestion_order %></dd>

  <dt><strong><%= t(:order_frequency) %>:</strong></dt>
  <dd><%= @site.order_frequency %></dd>

  <dt><strong><%= t(:number_of_deadline_sumission) %>:</strong></dt>
  <dd><%= @site.number_of_deadline_sumission %></dd>

  <dt><strong><%= t(:order_start_at) %>:</strong></dt>
  <dd><%= @site.order_start_at %></dd>

  <dt><strong><%= t(:test_kit_waste_acceptable) %>:</strong></dt>
  <dd><%= @site.test_kit_waste_acceptable %></dd>

  <dt><strong><%= t(:address) %>:</strong></dt>
  <dd><%= @site.address %></dd>

  <dt><strong><%= t(:contact_name) %>:</strong></dt>
  <dd><%= @site.contact_name %></dd>

  <dt><strong><%= t(:mobile) %>:</strong></dt>
  <dd><%= @site.mobile %></dd>

  <dt><strong><%= t(:land_line_number) %>:</strong></dt>
  <dd><%= @site.land_line_number %></dd>

  <dt><strong><%= t(:email) %>:</strong></dt>
  <dd><%= @site.email %></dd>

  <dt><strong><%= t(:province) %>:</strong></dt>
  <dd><%= @site.province.name %></dd>

</dl>

<div class="form-actions">
  <%= link_to t('back'),  admin_sites_path, :class => 'btn'  %>
  <%= link_to t('edit'),  edit_admin_site_path(@site), :class => 'btn' %>
  <%= link_to t('destroy'), admin_site_path(@site),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
