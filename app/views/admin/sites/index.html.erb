<%=page_header "Sites Listing" do %>
   <%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_site_path, :class => 'btn' %>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t("Name") %></th>
      <th><%= t("Service") %></th>
      <th><%= t("Sug Order") %></th>
      <th><%= t("Order Freq") %></th>
      <th><%= t("# Dead line Summision") %></th>
      <th><%= t("Order start at") %></th>
      <th><%= t("Test kit waste acceptable") %></th>
      <th><%= t("Contact name") %></th>
      <th><%= t("Province") %></th>
      <th ><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= link_to site.name, admin_site_path(site) %></td>
        <td><%= site.service_type %></td>
        <td><%= site.suggestion_order %></td>
        <td><%= site.order_frequency %></td>
        <td><%= site.number_of_deadline_sumission %></td>
        <td><%= site.order_start_at %></td>
        <td><%= site.test_kit_waste_acceptable %></td>
        <td><%= site.contact_name %></td>
        <td><%= site.province.name %></td>
        <td  width="90">
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_site_path(site), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_site_path(site),:method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


