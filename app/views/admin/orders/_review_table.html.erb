<table class="table table-bordered" >
  <thead>
  	<tr> 
      <th> # </th>
      <th> Commodity </th>
      <th> #Patient drug </th>
      <th> Stock on hand </th>
      <th> Consumtion</th>
      <th> System suggestion</th>
      <th> Quantity Suggested</th>
      <th> Status</th>
      <th> Entry Note</th>
      <th> Reviewer Note</th>
      <th width='60px;'> Action </th>

  	</tr>
  </thead>

  <tbody>
    <% order_lines.each_with_index do |order_line, index| %>
	    <tr> 
        <td> <%= index+1 %></td>
	      <td> <%= order_line.commodity.name %> </td>
	      <td> <%= order_line.number_of_client %></td>
	      <td> <%= order_line.stock_on_hand %> </td>
	      <td> <%= order_line.monthly_use %></td>
	      <td> <%= order_line.quantity_system_calculation %> </td>

	      <td> <%= order_line.quantity_suggested %></td>
        <td> <%= status(order_line.status) %> </td>
        <td> <%= order_line.user_data_entry_note %> </td>
	      
	      <td>
          <%= form_tag '', :method => :put, :id => "form_#{order_line.id}", :style =>'padding:0px;margin:0px;' do %>
            <input name='reviewer_note' id='reviewer_note_<%=order_line.id%>' type='text' 
                   value ='<%= order_line.user_reviewer_note    %>' /> 
          <% end %>  
         </td>
	      <td id='<%=order_line.id %>' > 
          <%= link_button 'icon-ok', '', approve_admin_order_order_line_path(order, order_line), :title => 'Accept',
                      :'data-ref' => order_line.id, :method => :put, :class => 'approved intercept btn-mini btn-success' %>           

          <%= link_button 'icon-minus-sign', '', reject_admin_order_order_line_path(order, order_line), :title => 'Reject',
                      :'data-ref' => order_line.id, :method => :put, :class => 'rejected intercept btn-mini btn-danger' %>  

	      </td>
	  	</tr>

    <% end %>
  </tbody>
</table>
<script >
 
 function handleButton(){
  $(".intercept").on('click', function(){ 
    $elm = $(this);
    $form = $("#form_" + $elm.attr("data-ref"));
    $form.attr('action', $elm.attr('href') );
    $form.submit();
    return false;

  });
 }

 $(function(){
  handleButton();
 });
 </script>
