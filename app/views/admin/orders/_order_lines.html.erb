<% 
  @kit  = 1
  @drug = 1
%>
  <%=f.simple_fields_for :order_lines do |order_line| %>
    <% if order_line.object.arv_type == CommodityCategory::TYPES_DRUG %>
        <%=content_for :drug do  %>
          <%= render :partial => "order_line_row_drug", :locals => { 
              :order_line_record => order_line.object ,
              :order_line => order_line,
              :order => order,
              :index => @drug
            } %>
          <% @drug += 1 %>  
        <% end %>    
    <% elsif order_line.object.arv_type == CommodityCategory::TYPES_KIT %>  
        <%=content_for :kit do %>
          <%= render :partial => "order_line_row_kit", :locals => { 
              :order_line_record => order_line.object,
              :order_line => order_line,
              :order => order,
              :index => @kit
            } %>   
        <% end %>
        <% @kit += 1 %> 
    <% end %>  
  <% end %>


  <div class="tabbable"> 
    <ul class="nav nav-tabs">
      <li class="active">
        <a href="#drug" data-toggle="tab" data-skip-loading='true'>Drugs</a>
      </li>
      <li> 
        <a href="#kit" data-toggle="tab" data-skip-loading='true'>Kits</a>
      </li>
    </ul>

    <div class="tab-content">
      <div class="tab-pane active" id="drug">
        <h4> Drug Commodities </h4>
        <div class='alert alert-error error-drug' style='display: none;' >
           Warning ! Quantity Suggested is not acceptable
        </div>
        <%= render :partial => 'order_line_table_drug', :locals => {:order => order ,:body => yield(:drug)} %>
      </div>
      <div class="tab-pane" id="kit">
         <h4> Kit Commodities </h4>
         <div class='alert alert-error error-kit' style='display: none;' >
           Warning ! Quantity Suggested is not acceptable
        </div>
         <%= render :partial => 'order_line_table_kit', :locals => {:order => order, :body => yield(:kit) } %>
      </div>
    </div>
  </div>