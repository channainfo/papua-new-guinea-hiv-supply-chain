
<% content_for :breadcrumb do %>
  <%= breadcrumb [{"SmsLogs" => nil}]  %>
<% end %> 

<%= page_header("Sms Log")%>
<%= render 'sms_type_tab', :type => @type %>
<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th class='nth-table'>#</th>
      <th>Site</th>
      <th>To</th>
      <th>Message</th>
      <th width=180>Date</th>
    </tr>
  </thead>
  <tbody>
    <% @sms_logs.each_with_index do |sms_log, index| %>
      <tr>
        <td><%= current_entries + index %></td>
        <td><%= sms_log.site.name %></td>
        <td><%= sms_log.to %></td>
        <td class='td-expand' title="<%=h sms_log.message %>"   > <%= truncate sms_log.message, :length => 90 %></td>
        <td class='td-expand' title="<%= sms_log.created_at %>" > <%= show_date_time(sms_log.created_at) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= render_paginate_for @sms_logs %>
