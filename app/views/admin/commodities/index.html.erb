<%= page_header("Commodities", :left => 6, :right => 6) do %>
    <%= link_to t('.new', :default => t("helpers.links.new")),
          new_admin_commodity_path, :class => 'btn btn-primary' %>
<% end %>

<% content_for :breadcrumb do %>
  <%= breadcrumb [{"Commodity" => nil}]  %>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t("Name") %></th>
      <th><%= t("Category") %></th>
      <th><%= t("Consumption per client (pack)") %></th>
      <th><%= t("Consumption per client (unit)") %></th>
      <th><%=  t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @commodities.each do |commodity| %>
      <tr>
        <td><%=link_to commodity.name, admin_commodity_path(commodity) %></td>
        <td><%= commodity.commodity_category.name %></td>
        <td><%= commodity.consumption_per_client_pack %></td>
        <td><%= commodity.consumption_per_client_unit %></td>
        <td class="last">
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_commodity_path(commodity), :class => 'btn btn-mini' %>
          
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_commodity_path(commodity),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
