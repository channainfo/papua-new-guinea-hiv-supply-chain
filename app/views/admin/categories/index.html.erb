<%content_for :breadcrumb do %>
 <%= breadcrumb [ "Categoies" => nil] %>
<% end %>

<%= page_header t("Drug categories")  do %>
  <%=link_button_new "New Drug Category", new_admin_category_path() %>
<%  end %>
<table class="table table-hover ">
  <thead>
    <tr>
      <th class='nth-table'>#</th>
      <th>Name</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each_with_index do |category, index| %>
      <tr>
        <td><%= current_entries + index %></td>
        <td><%= link_to category.name, edit_admin_category_path(category) %></td>
        <td><%= category.description %></td>
        <td>
          <%= link_button_delete 'Delete',  admin_category_path(category), 
                      :confirm => 'Are you sure to delete this category ?',
                      :method => :delete  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= render_paginate_for @categories %>