<%= simple_form_for [:admin,@user], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>
  <%= f.input :user_name %>
  <% if @user.new_record? %>
    <%= f.input :password , :input_html => {"autocomplete" => "off" }  %>
    <%= f.input :password_confirmation, :input_html => {"autocomplete" => "off"} %>
  <% end %>

  <%= f.input :phone_number %>
  <%= f.input :email %>
  <%= f.input :display_name %>
  <%= f.input :role, :collection => User::ROLES, :include_blank => "Select a role" %>
  <%= f.association :site, :include_blank => "Select a site" %>
  
  <div class="form-actions">
    <%= button_save ' Save '  %>
    <%= link_button_cancel 'Cancel',  admin_users_path %>
    <% if !@user.new_record? && @user != current_user %>
    <%= link_button 'icon-repeat', " Reset password", reset_admin_user_path(@user),:method => :put, :confirm => 'Are you sure to reset password for this user?' ,:class => 'btn btn-info' %>
    <%end %>
    
  </div>
<% end %>