<%= simple_form_for [:admin,@user], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>
  <%= f.input :user_name %>
  <%= f.input :password , :input_html => {"autocomplete" => "off" }  %>
  <%= f.input :password_confirmation, :input_html => {"autocomplete" => "off"} %>
  <%= f.input :phone_number %>
  <%= f.input :email %>
  <%= f.input :display_name %>
  <%= f.association :site, :include_blank => "Select a site" %>
  <%= f.input :role, :collection => User::ROLES, :include_blank => "Select a role" %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('Cancel'),  admin_users_path, :class => 'btn' %>
  </div>
<% end %>