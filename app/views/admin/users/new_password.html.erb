<% content_for :breadcrumb do %>
  <%= breadcrumb [{"Change Password" => nil } ] %>
<% end %>

<%= page_header "Fill the form to change your password" %>

<br />

<%= simple_form_for [:admin, current_user], :url => change_admin_users_path, :method => :put, :html => { :class => 'form-horizontal' } do |f| %> 
  <%= f.error_notification %>
  <%= f.input  "current_password", :input_html => { "autocomplete" => "off" } %>
  <%= f.input  "password" , :input_html => { "autocomplete" => "off" }  %>
  <%= f.input  "password_confirmation" , :input_html => { "autocomplete" => "off" }  %>
  <div class="form-actions">
  	<%= button_save ' Save' %>
  </div>

<% end %> 