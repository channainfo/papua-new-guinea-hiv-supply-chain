<%= content_for :breadcrumb do %>
  <%= breadcrumb [
      { 'Users' => admin_users_path    },
      { 'Detail : ' + @user.user_name => nil }
    ] %>
<% end %>
<%= page_header "User Detail" %>

<dl class="dl-horizontal">
  <dt><strong><%= t("Login") %>:</strong></dt>
  <dd><%= @user.user_name %></dd>

  <dt><strong><%= t("Email") %>:</strong></dt>
  <dd><%= @user.email %></dd>

  <dt><strong><%= t("Phone Number") %>:</strong></dt>
  <dd><%= @user.phone_number %></dd>

  <dt><strong><%= t("Display Name") %>:</strong></dt>
  <dd><%= @user.display_name %></dd>

  <dt><strong><%= t("Site") %>:</strong></dt>
  <dd><%= @user.site.name %></dd>

  <dt><strong><%= t("Last Access At") %>:</strong></dt>
  <dd><%= @user.last_sign_in_at %></dd>

  <dt><strong><%= t("Created At") %>:</strong></dt>
  <dd><%= @user.created_at %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('Back'), admin_users_path, :class => 'btn'  %>
  
  <%= link_to t('Edit'), edit_admin_user_path(@user), :class => 'btn' %>
  
  <%= link_to t('Destroy'), admin_user_path(@user),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger' %>
</div>
