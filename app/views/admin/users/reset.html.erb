<% content_for :breadcrumb do %>
  <%= breadcrumb [{"Users" => admin_users_path},{"Reset: #{@user.user_name}" => nil } ] %>
<% end %>

<%= page_header "Reset password user" %>

<%= simple_form_for( @user, 
					 # :url => url_for( :action => 'reset', :controller => 'users' ), 
					 :url => change_admin_user_path(@user), 
					 :method => :put,
 					 :html => {'class' => 'form-horizontal'} ) do |f| %>

  <%= f.error_notification %>
  <%= f.input  "current_password", :input_html => { "autocomplete" => "off" } %>
  <%= f.input  "password" , :input_html => { "autocomplete" => "off" }  %>
  <%= f.input  "password_confirmation" , :input_html => { "autocomplete" => "off" }  %>
  <%= button_save ' Save' %>

<% end %> 