<% content_for :breadcrumb do %>
  <%= breadcrumb [{"Users" => nil}]  %>
<% end %>

<%= page_header "Users" do %>
  <%= link_button_new "New User", new_admin_user_path, :class => "btn" %>
<% end %>

<table class="table table-hover table-bordered" >
  <thead>
    <tr>
      <th class='nth-table'>#</th>
      <th>Login</th>
      <th>Phone</th>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Site</th>
      <th>Last access</th>
      <th  class="action_col2" ><%= t("Action")%></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each_with_index do |user, index|%>
      <tr>
        <td><%= index + current_entries %> </td>
        <td><%= link_to user.user_name, edit_admin_user_path(user) %> </td>
        <td><%= user.phone_number %> </td>
        <td><%= user.display_name  %> </td>
        <td><%= user.email  %> </td>
        <td><%= user.role  %> </td>
        <td><%= user.site ? user.site.name : '' %> </td>
        <td><%= user.last_sign_in_at  %> </td>
        <td class="last">
          <%= link_button_edit 'Edit', edit_admin_user_path(user), :class => 'btn btn-success' %>
          <% if current_user.id != user.id %>
          <%= link_button_delete 'Delete'  , admin_user_path(user), :method => :delete,
                      :confirm => 'Are you sure to delete?', :class => 'btn btn-mini btn-danger' %>
          <% end %>            
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= render_paginate_for @users %>