<% content_for :breadcrumb do %>
  <%= breadcrumb [{"Profile"=>nil } ] %>
<% end %>


<%= page_header "Chanage your profile data" %>
<br />

<%= simple_form_for [:admin, current_user], :url => update_profile_admin_users_path, :method => :put, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>
  <%= f.input :user_name, :input_html => { :disabled => 'disabled'} %>
  <%= f.input :phone_number %>
  <%= f.input :email %>
  <%= f.input :display_name %>
  <%= f.association :site, :include_blank => "Select a site" %>
  <div class="form-actions">
    <%= button_save ' Save '  %>
  </div>
<% end %>