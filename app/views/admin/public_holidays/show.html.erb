<%- model_class = Province -%>

<%= page_header "Public Holiday Detail" %>

<dl class="dl-horizontal">
  <dt><strong><%= t("Name") %>:</strong></dt>
  <dd><%= @public_holiday.name %></dd>
  <dt><strong><%= t("Date") %>:</strong></dt>
  <dd><%= @public_holiday.date %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_public_holidays_path, :class => 'btn'  %>
  
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_public_holiday_path(@public_holiday), :class => 'btn' %>
  
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_public_holiday_path(@public_holiday),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
