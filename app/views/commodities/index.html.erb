<h1>Listing commodities</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Commodity category</th>
    <th>Consumption per client pack</th>
    <th>Consumption per client unit</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @commodities.each do |commodity| %>
  <tr>
    <td><%= commodity.name %></td>
    <td><%= commodity.commodity_category_id %></td>
    <td><%= commodity.consumption_per_client_pack %></td>
    <td><%= commodity.consumption_per_client_unit %></td>
    <td><%= link_to 'Show', commodity %></td>
    <td><%= link_to 'Edit', edit_commodity_path(commodity) %></td>
    <td><%= link_to 'Destroy', commodity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

