<%- model_class = Site -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @site.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lat) %>:</strong></dt>
  <dd><%= @site.lat %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lng) %>:</strong></dt>
  <dd><%= @site.lng %></dd>
  <dt><strong><%= model_class.human_attribute_name(:service_type) %>:</strong></dt>
  <dd><%= @site.service_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:suggestion_order) %>:</strong></dt>
  <dd><%= @site.suggestion_order %></dd>
  <dt><strong><%= model_class.human_attribute_name(:order_frequency) %>:</strong></dt>
  <dd><%= @site.order_frequency %></dd>
  <dt><strong><%= model_class.human_attribute_name(:number_of_deadline_sumission) %>:</strong></dt>
  <dd><%= @site.number_of_deadline_sumission %></dd>
  <dt><strong><%= model_class.human_attribute_name(:order_start_at) %>:</strong></dt>
  <dd><%= @site.order_start_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:test_kit_waste_acceptable) %>:</strong></dt>
  <dd><%= @site.test_kit_waste_acceptable %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @site.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contact_name) %>:</strong></dt>
  <dd><%= @site.contact_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mobile) %>:</strong></dt>
  <dd><%= @site.mobile %></dd>
  <dt><strong><%= model_class.human_attribute_name(:land_line_number) %>:</strong></dt>
  <dd><%= @site.land_line_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @site.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:province_id) %>:</strong></dt>
  <dd><%= @site.province_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              sites_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_site_path(@site), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              site_path(@site),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
